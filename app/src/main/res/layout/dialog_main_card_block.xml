<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_darkgray_radius_16"
        android:paddingVertical="40dp"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/tv_maincardblock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="@string/dialog_main_card_block_title"
            android:textColor="@color/white_1"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_maincardblock_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_maincardblock_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/dialog_main_card_block_about"
            android:textColor="@color/white_2"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_maincardblock_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>