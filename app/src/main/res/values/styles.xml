<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Fragment Title  -->
    <style name="fragment_title_text">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Cardpack Recyclerview  -->
    <style name="cardpack_recyclerview_tv">
        <item name="android:textColor">@color/real_black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Cardpack Empty textView  -->
    <style name="cardpack_empty_textView">
        <item name="android:textColor">@color/white_3</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Cardpack Empty textView green  -->
    <style name="cardpack_empty_textView_green">
        <item name="android:textColor">@color/main_green_darker</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!--  Cardpack Empty textView purple  -->
    <style name="cardpack_empty_textView_purple">
        <item name="android:textColor">@color/main_purple_darker</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!--  Cardpack Empty textView white2  -->
    <style name="cardpack_empty_textView_white2">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!--  CardCreate complete textView -->
    <style name="cardpack_complete_textView">
        <item name="android:textColor">@color/white_4</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!--  Detail Card Text Hint  -->
    <style name="detail_card_text_hint">
        <item name="android:textColor">@color/white_3</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Cardpack Bottomsheet Title  -->
    <style name="cardpack_bottomsheet_title">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Cardpack_ Bottomsheet Detail  -->
    <style name="cardpack_bottomsheet_detail">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Create Card Complete Title  -->
    <style name="create_card_complete_title">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Create Card Complete  -->
    <style name="create_card_complete">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Represent Card Edit Title White  -->
    <style name="represent_card_edit_title_white">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Card Edit Tablayout Selected  -->
    <style name="card_edit_tablayout_selected_style">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!--  Card Edit Tablayout  -->
    <style name="card_edit_tablayout_style">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <!--  Mypage Edittext  -->
    <style name="mypage_edittext_style">
        <item name="android:includeFontPadding">false</item>
        <item name="colorControlActivated">@color/white_2</item>
        <item name="android:textCursorDrawable">@color/main_green</item>
        <item name="colorControlNormal">@color/white_4</item>
        <item name="android:textSelectHandle">@color/main_green</item>
        <item name="android:textColorHighlight">#8C5ECC9C</item>
        <item name="android:textColorHint">@color/white_2</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Mt Title  -->
    <style name="mt_title_style">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Setting Title  -->
    <style name="setting_title_style">
        <item name="android:textColor">@color/white_3</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/pretendard_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Setting Sentence  -->
    <style name="setting_sentence_style">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--  Material Button  -->
    <style name="materialButton_semiBold12_style" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--    setNameFinished Button-->
    <style name="setnamefinished_btn_style">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <!--  search_view  -->
    <style name="search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorControlActivated">@color/white_2</item>
        <item name="android:textCursorDrawable">@color/main_green</item>
        <item name="colorControlNormal">@color/white_4</item>
        <item name="android:textSelectHandle">@color/main_green</item>
        <item name="android:textColorHighlight">#8C5ECC9C</item>
        <item name="android:textSize">86sp</item>
        <item name="searchIcon">@drawable/ic_magnifier</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">"이름 검색"</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="popup_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_purple</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--  BottomDialog  -->
    <style name="BottomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="relation_dialog_title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="relation_dialog_btn_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="relation_dialog_about">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editcard_tab_layout_select" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">22sp</item>

    </style>

    <style name="editcard_tab_layout_unselect">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="tabSelectedTextColor">@color/white_1</item>
    </style>

    <style name="onboarding_title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="lineHeight">30dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="onboarding_about">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="lineHeight">21dp</item>
        <item name="android:textColor">@color/white_2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="onboarding_indicator_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
